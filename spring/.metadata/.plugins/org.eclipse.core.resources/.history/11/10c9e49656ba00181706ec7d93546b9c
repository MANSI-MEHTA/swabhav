package com.techlabs.repository;

import java.util.List;

import org.hibernate.Query;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.techlabs.entity.Product;

@Repository
public class ProductRepository {

	@Autowired
	private SessionFactory factory;

	public List<Product> getAllProducts() {
		Session hbsession = this.factory.openSession();
		hbsession.beginTransaction();

		Query query = hbsession.createQuery("from Product");
		List<Product> listofproducts = query.list();
		System.out.println(listofproducts);
		return listofproducts;
	}

	public Product getProductById(int id) {
		Session hbsession = this.factory.openSession();
		hbsession.beginTransaction();
		return (Product) hbsession.get(Product.class, id);
	}

	public SessionFactory getFactory() {
		return factory;
	}

	@Autowired
	public void setFactory(SessionFactory factory) {
		this.factory = factory;
	}

}
