package com.techlabs.service;

import java.util.ArrayList;
import java.util.List;

import com.techlabs.model.Product;

public class ProductService {
	private List<Product> listofproducts = new ArrayList<Product>();
	private ProductService object;
	private ProductService(){
		
	}
	public ProductService getInstanceOf(){
		if(object==null){
			object=new ProductService();
			init();
		}
		return object;
	}
	public void init(){
		listofproducts.add(new Product("P101","laptop",50000,5000));
		listofproducts.put("P102","iphone6s");
		listofproducts.put("P103","iphone7");
		listofproducts.put("P104","iphone7s");
		listofproducts.put("P105","iphone8");
		listofproducts.put("P106","iphone9");
		listofproducts.put("P107","DELL Laptop");
		listofproducts.put("P108","ipad");
		listofproducts.put("P109","Hp laptop");
		listofproducts.put("P110","lenovo laptop");
	
	}
	
	public void addtocart(Product product){
		listofproducts.add(product);
	}
	
} 
