package com.techlabs.service;

import java.util.ArrayList;
import java.util.List;

import com.techlabs.model.Product;

public class ProductService {
	private List<Product> listofproducts = new ArrayList<Product>();
	private ProductService object;
	private ProductService(){
		
	}
	public ProductService getInstanceOf(){
		if(object==null){
			object=new ProductService();
			init();
		}
		return object;
	}
	public void init(){
		listofproducts.add(new Product("P101","laptop",50000,5000));
		listofproducts.add(new Product("P102","iphone6s",50000,100));
		listofproducts.add(new Product("P103","iphone7"));
		listofproducts.add(new Product("P104","iphone7s"));
		listofproducts.add(new Product("P105","iphone8"));
		listofproducts.add(new Product("P106","iphone9"));
		listofproducts.add(new Product("P107","DELL Laptop"));
		listofproducts.add(new Product("P108","ipad"));
		listofproducts.add(new Product("P109","Hp laptop"));
		listofproducts.add(new Product("P110","lenovo laptop"));
	
	}
	
	public void addtocart(Product product){
		listofproducts.add(product);
	}
	
} 
