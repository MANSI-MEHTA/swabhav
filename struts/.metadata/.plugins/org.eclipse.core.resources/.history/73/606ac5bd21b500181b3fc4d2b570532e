package com.techlabs.service;

import java.util.ArrayList;
import java.util.List;

import com.techlabs.model.LineItem;
import com.techlabs.model.Product;

public class LineItemService {
	private List<LineItem> productsincart = new ArrayList<LineItem>();

	public void addproductsincart(LineItem lineitem) {
		productsincart.add(lineitem);
	}

	public List<Product> getAllLineItem() {
		return productsincart;
	}

	public void deleteLineById(String id) {
		for (Product product : productsincart) {
			if (product.getId().equals(id)) {
				productsincart.remove(product);
			}
		}
	}

	public List<Product> getProductsincart() {
		return productsincart;
	}

	public void setProductsincart(List<Product> productsincart) {
		this.productsincart = productsincart;
	}

}
